@using atinformstudy.Models;
@model Course
@{
    ViewBag.Title = "Оплата";
}

<div class="jumbotron">
    <h2>Ваш заказ</h2>
    <table class="table table-hover table-striped">
        <tr>
            <th>Название</th>
            <th>Часов</th>
            <th>Стоимость, руб.</th>
        </tr>
        @{
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Hours</td>
                <td>@Model.Price</td>
            </tr>
        }
    </table>
    <a href="/Course/FormGroup/@Model.Id" class="btn btn-success">Оплатить заказ</a>
</div>